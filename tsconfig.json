{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react",
      "module": "ESNext",
      "sourceMap": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
    "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.test.tsx"]
  }